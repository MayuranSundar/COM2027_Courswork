- content_for(:html_title) { 'MHS - Channels' }
%p#notice= notice
%h1.title.is-2 Channels
-if admin?
  .level
    .level-left
    .level-right
      =link_to 'New Channel', new_channel_path, class: 'button is-dark'
  %table.table.is-fullwidth
    %thead
      %tr
        %th Channel
        %th{colspan: "3"}
    %tbody
      - @channels.each do |channel|
        %tr
          %td= link_to channel.name, channel
          %td
            .buttons.is-right
              = link_to 'View Channel', channel, class:'button is-info'
              = link_to 'Edit Channel', edit_channel_path(channel), class:'button is-info'
              = link_to 'Delete', channel, class:'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this channel? " }
-else
  You don't have access to this page!
