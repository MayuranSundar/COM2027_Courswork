= simple_form_for([@discussion, @discussion.replies.build], remote: true) do |f|
  -if params.has_key?(:parent_id)
    = f.hidden_field :parent_id, value: params[:parent_id]
  .field
    .control
      =f.input :reply_text, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'}
  = f.button :submit, 'Leave a reply', class: 'button is-info'
