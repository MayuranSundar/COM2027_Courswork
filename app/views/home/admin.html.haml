- content_for(:html_title) { 'MHS - Admin' }
%section.section
  .container
    .columns.is-centered
      .column.is-4
        %h2.title.is-2.is-spaced Admin Homepage
    %table.table.is-fullwidth
      %tr
        %th
          %p.subtitle.is-3 Volunteer List
        %th= link_to 'View', volunteer_list_path, {class: "button is-info is-rounded is-normal is-fullwidth"}
      %tr
        %th
          %p.subtitle.is-3 Channels
        %th= link_to 'View', channels_path, {class: "button is-info is-rounded is-normal is-fullwidth"}
      %tr
        %th
          %p.subtitle.is-3 Reports
        %th= link_to 'View', '', {class: "button is-info is-rounded is-normal is-fullwidth"}
      %tr
        %th
          %p.subtitle.is-3 Edit Details
        %th= link_to 'Edit', edit_user_registration_path, {class: "button is-info is-rounded is-normal is-fullwidth"}
      %tr
        %th
          %p.subtitle.is-3 Logout of the session
        %th= button_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger is-rounded is-normal is-fullwidth"
